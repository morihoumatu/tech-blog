---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="bg-blog-light shadow-sm">
	<nav class="max-w-6xl mx-auto px-4 py-4">
		<div class="flex items-center justify-between">
			<div class="flex items-center gap-4">
				<img 
					src="https://pbs.twimg.com/profile_images/1890645300370632704/NjNqgEzg_400x400.jpg" 
					alt="森 宝松" 
					class="w-12 h-12 rounded-full"
				/>
				<h2 class="text-2xl font-bold text-blog-dark">
					<a href="/tech-blog/">{SITE_TITLE}</a>
				</h2>
			</div>
			<div class="flex items-center space-x-8">
				<div class="hidden md:flex space-x-6">
					<HeaderLink href="/tech-blog/" class="text-blog-dark hover:text-blog-primary">Home</HeaderLink>
					<HeaderLink href="/tech-blog/blog" class="text-blog-dark hover:text-blog-primary">Blog</HeaderLink>
				</div>
				<div class="flex space-x-4">
					<a href="https://x.com/HoumatsuM7789" target="_blank" class="text-blog-dark hover:text-blog-primary">
						<span class="sr-only">Follow on Twitter</span>
						<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24"
							><path
								fill="currentColor"
								d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
							></path></svg>
					</a>
				</div>
			</div>
		</div>
	</nav>
</header>